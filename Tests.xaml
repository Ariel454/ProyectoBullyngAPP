<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBullying.Tests"
             Title="Tests">
    <VerticalStackLayout>
        <Label 
            Text="Bienvenido a la sección de Tests disponibles"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="20"
            Margin="0,20,0,10"/>
        <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
            <Button Text="Test de autoevaluación" Clicked="OnTestAutoevaluacionClicked" BackgroundColor="Gray" HorizontalOptions="Start"/>
            <Button Text="Test Emocional" Clicked="OnTestEmocionalClicked" BackgroundColor="Gray" HorizontalOptions="End"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>